{
  "name": "@seniorsistemas/multischemase",
  "version": "1.0.1-beta.8",
  "description": "Multischemase é uma ferramenta de criação de banco de dados multi schemas e migração independente de estrutura para o Node.",
  "main": "./dist/index.js",
  "bin": {
    "multischemase": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "del-cli dist && tsc",
    "prepublish": "npm run build",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run build && node examples/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-senior-com-br/multischemase.git"
  },
  "keywords": [
    "multi",
    "schema",
    "agnostic",
    "migration"
  ],
  "author": "Wallace Reetz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dev-senior-com-br/multischemase/issues"
  },
  "homepage": "https://github.com/dev-senior-com-br/multischemase#readme",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.3.1",
    "jest": "^26.0.1",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "comment-json": "^3.0.2",
    "knex": "^0.21.1",
    "pg": "^8.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
