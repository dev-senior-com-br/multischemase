{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2016"],
    "sourceMap": true,
    "types": [
        "node"
    ],
    "skipLibCheck": true
},
  "include": [
    "./lib/**/*",
    "./src/**/*",
    "./index.ts"
  ]
}