{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es5"
    ],
    "sourceMap": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
  },
  "include": [
    "./lib/**/*",
    "./index.ts"
  ],
  "exclude": [
    "node_modules/*/**", "**/__tests__/*"
  ]
}