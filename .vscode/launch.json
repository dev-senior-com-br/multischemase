    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run TS Node",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/src/index.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        }
    ]
}